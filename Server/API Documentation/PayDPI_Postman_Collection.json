    {
      "name": "üîê Authentication (SLUDI)",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(201)) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.citizenId) {",
                  "        pm.collectionVariables.set('CITIZEN_ID', response.data.citizenId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phoneNumber\": \"+94771234567\",\n  \"password\": \"SecurePass123!\",\n  \"dateOfBirth\": \"1990-01-01\",\n  \"address\": \"123 Main St, Colombo\"\n}"
            },
            "url": {
              "raw": "{{SLUDI_BASE_URL}}/api/auth/register",
              "host": ["{{SLUDI_BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(200)) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('JWT_TOKEN', response.data.token);",
                  "        pm.collectionVariables.set('CITIZEN_ID', response.data.citizen.citizenId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{SLUDI_BASE_URL}}/api/auth/login",
              "host": ["{{SLUDI_BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "üéÅ Subsidies",
      "item": [
        {
          "name": "Apply for Student Subsidy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(201)) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.subsidyId) {",
                  "        pm.collectionVariables.set('SUBSIDY_ID', response.data.subsidyId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{JWT_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subsidyType\": \"student\",\n  \"percentage\": 50,\n  \"eligibilityPeriod\": 365,\n  \"verificationDocuments\": [\n    {\n      \"documentType\": \"student_id\",\n      \"documentUrl\": \"https://example.com/student-id.jpg\",\n      \"uploadedAt\": \"2025-08-09T00:00:00.000Z\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{PAYDPI_BASE_URL}}/api/subsidies/apply",
              "host": ["{{PAYDPI_BASE_URL}}"],
              "path": ["api", "subsidies", "apply"]
            }
          }
        },
