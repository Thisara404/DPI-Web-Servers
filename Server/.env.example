# DPI API Gateway Configuration
GATEWAY_PORT=3000
NODE_ENV=development

# Service URLs
SLUDI_URL=http://localhost:3001
NDX_URL=http://localhost:3002
PAYDPI_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:5173,http://localhost:3005,http://127.0.0.1:5173,http://127.0.0.1:3000

# Security
ENABLE_RATE_LIMITING=false
ENABLE_REQUEST_LOGGING=true
